<?xml version="1.0"?>

<launch>
	<arg name="scan_topic" default="scan" />	
	
	<node pkg="gmapping" type="slam_gmapping" name="slam_gmapping">
		<remap from="scan" to="$(arg scan_topic)" />
	</node>

	<include  file="$(find sample_robot_bringup)/launch/bringup_sim.launch" />

	<node pkg="turtlesim" type="turtle_teleop_key" name="turtle_teleop_key">
		<remap from="turtle1/cmd_vel" to="sample_robot/diff_drive_controller/cmd_vel" />
	</node>
</launch>
